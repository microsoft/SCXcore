<appSettings>

  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- Logging: Settings: Start -->

  <!-- Log application trace with errors and information to a file in the Log folder as configured in "Application Folder" settings below." -->
  <!--  Possible values: -->
  <!--  1. Off: Donot Log anything. -->
  <!--  2. Error: Log Errors only. -->
  <!--  3. Trace : Enable tracing in the application primarily for any issue investigation. -->
  <add key="EnableLog" value="Error"/>

  <!-- Logging: Settings: End -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->


  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- ProductStudio: Settings: Start -->
  <add key="ProductStudioDomain" value="redmond.corp.microsoft.com" />
  <add key="ProductStudioDatabase" value="Policheck" />
  <!-- ProductStudio: Settings: End -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- Application Folders: Settings: Start -->

  <!-- Local folder on machine to store debug log -->
  <add key="Log" value="" />

  <!-- Temp folder on local machine to store certain operatioanal file for e.g. uncompressed files. -->
  <add key="WorkingDirectory" value="" />

  <!-- Local folder on machine to store scan results for GUI tasks -->
  <add key="Results" value="" />

  <!-- Local folder to store rules data -->
  <add key="Rules" value="" />
  <!-- Application Folders: Settings: End -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- Policheck UI context Length: -->
  <add key="ContextLength" value="200" />
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- Dev purpose to set the ResultWriter to be used. -->
  <!-- 1.  REC: Binary writing for result to file -->
  <!-- 2.  MDB: use .mdb file to store results-->
	<add key="ResultWriter" value="REC" />
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- whether to bypass the AutoUpdate Feature -->
  <!-- 1.  "On": Application will check for Updates -->
  <!-- 2.  "Off": Application will bypass the Auto Update-->
  <add key="AutoUpdate" value="ON" />
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	
 <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
 <!-- Maximum number of records to be shown in GUI Scan Result tab-->
 <add key="MaxLimitForGuiResult" value="50000" />
 <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	
  <!-- Policheck Help: Settings: Start -->
  <add key="Policheck_CurrentVersion" value="5.3.0.0" />
  <add key="Policheck_Mail" value="mailTo:BGITHelp@microsoft.com" />
  <add key="Policheck_HomePageUrl" value="http://PoliCheck" />
  <add key="Policheck_HelpFileUrl" value="http://bgcoe/DevSer/PoliCheck/Documents/PoliCheck%205.0%20Help/PoliCheck5%200.docx"/>
  <!-- Policheck Help: Settings: End -->

	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!-- List of ports number used by the Policheck Windows Service-->
	<add key="port1" value="8085"/>
	<add key="port2" value="8086"/>
	<add key="port3" value="8087"/>
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  
</appSettings>

