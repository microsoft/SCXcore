%Variables
PF:	'Linux'

%OmiService_funcs
StopOmiService() {
#ifdef ULINUX
    if [ -x /usr/sbin/invoke-rc.d ]; then
	invoke-rc.d scx-cimd stop
    elif [ -x /sbin/service ]; then
	service scx-cimd stop
    else
	echo "Unrecognized Service Controller to stop SCX Service."
	exit 1
    fi
    
#elseif PFDISTRO == SUSE
#if PFMAJOR == 9
    /etc/init.d/scx-cimd stop
#else
    service scx-cimd stop
#endif
#else
    service scx-cimd stop
#endif
}

RemoveOmiService() {
#ifdef ULINUX
    if [ -x /usr/sbin/update-rc.d ]; then
	update-rc.d scx-cimd defaults > /dev/null
    elif
#else
    if
#endif
    [ -x /usr/lib/lsb/install_initd ]; then
	/usr/lib/lsb/install_initd /etc/init.d/scx-cimd
    elif [ -x /sbin/chkconfig ]; then
	chkconfig --del scx-cimd > /dev/null
    else
	echo "Unrecognized Service Controller to unregister OMI Service."
	exit 1
    fi
}

%Postinstall_775
set -e

%Postinstall_950
# ConfigureOmiService
#ifdef ULINUX
if [ -x /usr/sbin/update-rc.d ]; then
    update-rc.d scx-cimd defaults > /dev/null
elif
#else
if
#endif
[ -x /usr/lib/lsb/install_initd ]; then
    /usr/lib/lsb/install_initd /etc/init.d/scx-cimd
elif [ -x /sbin/chkconfig ]; then
    chkconfig --add scx-cimd > /dev/null
else
    echo "Unrecognized Service Controller to configure OMI Service."
    exit 1
fi

%Postinstall_1100
# StartOmiService
#ifdef ULINUX
if [ -x /usr/sbin/invoke-rc.d ]; then
    invoke-rc.d scx-cimd start
elif [ -x /sbin/service ]; then
    service scx-cimd start
else
    echo "Unrecognized Service Controller to start SCX Service"
    exit 1
fi

#elseif PFDISTRO == SUSE 
#if PFMAJOR == 9
/etc/init.d/scx-cimd start
#else
service scx-cimd start
#endif
#else
service scx-cimd start
#endif

%Preuninstall_100
#include OmiService_funcs
StopOmiService

%Preuninstall_200
RemoveOmiService

