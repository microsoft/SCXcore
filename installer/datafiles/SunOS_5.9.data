%Variables
PFMAJOR:	 '5'
PFMINOR:	 '9'
pam_dir_passwd:	 'auth requisite pam_authtok_get.so.1\nauth required pam_dhkeys.so.1\nauth required pam_unix_auth.so.1\naccount requisite pam_roles.so.1\naccount required pam_unix_account.so.1'
pam_file_passwd: 'omi auth requisite pam_authtok_get.so.1\nomi auth required pam_dhkeys.so.1\nomi auth required pam_unix_auth.so.1\nomi account requisite pam_roles.so.1\nomi account required pam_unix_account.so.1'
SUDO_DIR:       '/opt/sfw/bin'

%Files
/etc/init.d/scx-cimd; installer/conf/init.d/scx-cimd.sun8; 744; root; root

%Directories
/etc/rc2.d; 755; root; bin; sysdir

%Links
/etc/rc2.d/S999scx-cimd; ../init.d/scx-cimd; 744; root; root

%Dependencies
P SUNWcsl	Core Solaris, (Shared Libs)
P SUNWlibC	Sun Workshop Compilers Bundled libC
P SUNWlibms	Sun WorkShop Bundled shared libm
P SMCosslg	openssl

%OmiService_funcs
StopOmiService() {
    /etc/init.d/scx-cimd stop
}

%Postinstall_999
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/ssl/lib
export LD_LIBRARY_PATH

%Postinstall_1100
# StartOmiService
/etc/init.d/scx-cimd start

%Preuninstall_100
#include OmiService_funcs
StopOmiService
