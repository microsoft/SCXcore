%Variables
PFMAJOR:	 '5'
PFMINOR:	 '9'
SUDO_DIR:        '/opt/sfw/bin'

%OmiService_funcs
StopOmiServer() {
    /etc/init.d/omiserverd stop
}

StartOmiServer() {
    /etc/init.d/omiserverd stop
}

%Preinstall_10
#include OmiService_funcs
#include CheckIfOmiIsRunning
if [ $OMI_IS_RUNNING -eq 1 ]; then
    StopOmiServer
fi

%Postinstall_999
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/ssl/lib:/usr/local/lib
export LD_LIBRARY_PATH

%Postinstall_1100
#include OmiService_funcs
StartOmiServer

